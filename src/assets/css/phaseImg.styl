.img-style
  height 320px
  width 370px
  background url('../../assets/images/svg/cross/crossBg.svg') repeat
  background-size 100%
  position absolute
  .div_n, .div_e,.div_s,.div_w
    width 150px
    position absolute
    top 0
    left 84px
    span
      width 22px
      height 20px
      font-size 12px
      color #ffffff
      line-height 20px
      margin 0 5px
      display block
      float left
    .phase, .camera, .foot_way:nth-child(1)
      span
        background-color black
  .div_e,.div_s,.div_w
    transform-origin: 102px 158px
    span
      transform-origin: center center
  .div_s
    transform rotate(180deg)
    .camera_person_img
      transform rotate(180deg)
    span
      transform rotate(180deg)
  .div_w
    transform rotate(-90deg)
    .camera_person_img
      transform rotate(-90deg)
    span
      transform rotate(90deg)
  .div_e
    transform rotate(90deg)
    .camera_person_img
      transform rotate(90deg)
    span
      transform rotate(-90deg)
  .phase_img
    height 30px
    color red
    position absolute
    top 23px
    left 5px
    span
      width 10px
      height 30px
      float left
      margin 0 11px
      transform rotate(180deg)
  .camera
    top 12px
    height 50px
    position absolute
    left 100px
    span
      height 15px
      line-height 15px
  .camera_img
    top 13px
    position absolute
    left 48px
    span
      width 30px
      height 15px
      transform rotate(90deg)
      img
        position absolute
        top -50px
        left 25px
  .camera_person
    top 97px
    height 50px
    position absolute
    left 7px
    span
      height 15px
      line-height 15px
      background-color: black
  .camera_person_img
    top 97px
    left 11px
    position absolute
    span
      width 30px
      height 15px
  .foot_way
    width 30px
    height 70px
    top 90px
    position absolute
    left 30px
    span:nth-child(1)
      position absolute
      top 30px
      left 55px
      background-color black
    span:nth-child(2)
      height 100px
      position absolute
      top -30px
      left 40px
      transform rotate(90deg)
      img
        width 100%
        position absolute 
        top -15px
        left -5px
  .phase_img, .foot_way_img, .camera_imgs, .camera_person_img
    img
      height 100%
      width 100%
      z-index 2
    .change_img
      position absolute
    .active
      z-index 1